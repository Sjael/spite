            "cargo": {
                "args": [
                    "build",
                    "--bin=local",
                    "--package=sacred_aurora"
                ],
                "filter": {
                    "name": "local",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ]
        },
